{
  "compilerOptions": {
    "baseUrl": ".",        // The base directory to resolve non-relative modules
    "paths": {
      "@/*": ["src/*"],     // Alias '@' to the src directory (adjust if your structure differs)
      "@/components/*": ["src/components/*"],
      "@/styles/*": ["src/styles/*"]
    },
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}


